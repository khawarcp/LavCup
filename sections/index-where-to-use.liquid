
<link rel="stylesheet" href="{{ 'index-testimonials.css' | asset_url }}">
<script src="{{ 'index-testimonials.js' | asset_url }}" defer></script>
{%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
  
    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
  {%- endstyle -%}
<section class="section-{{ section.id }}-padding where-to-us-wrapper">
    <div class="page-width">
        {% if section.settings.heading != blank %}
        <div class="section-header">
            <h2> {{ section.settings.heading }} </h2>
        </div>
        {% endif %}
        <div class="grid {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
            {% for block in section.blocks %}
                {% case block.type %}
                    {% when 'block' %}
                            <div class="grid__item" 
                            {% if settings.animations_reveal_on_scroll %}
                                data-cascade
                                style="--animation-order: {{ forloop.index }};"
                            {% endif %}>
                            {% if block.settings.image != blank %}                                
                                 <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.image.alt }}" height="" width="" loading="lazy">                                
                            {% else %}
                                {{ 'image' | placeholder_svg_tag }}
                            {% endif %}
                                <h5> {{ block.settings.heading }} </h5>
                            </div>                         
                {% endcase %}
            {% endfor %}
        </div>
    </div>
</section>
{% schema %}
    {
        "name": "Where to use",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "Heading",
                "default": "Where To Use <span>Lavcup</span>"
            },
            {
                "type": "header",
                "content": "t:sections.all.padding.section_padding_heading"
            }, 
            {
                "type": "range",
                "id": "padding_top",
                "min": 0,
                "max": 100,
                "step": 4,
                "unit": "px",
                "label": "t:sections.all.padding.padding_top",
                "default": 36
            }, 
            {
                "type": "range",
                "id": "padding_bottom",
                "min": 0,
                "max": 100,
                "step": 4,
                "unit": "px",
                "label": "t:sections.all.padding.padding_bottom",
                "default": 36
            }
        ],
        "blocks": [
            {
                "type": "block",
                "name": "Block",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Image"
                    },
                    {
                        "type": "text",
                        "id": "heading",
                        "label": "Heading",
                        "default": "Bathroom"
                    },
                    {
                        "type": "url",
                        "id": "heading_url",
                        "label": "URL"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Where to use"
            }
        ]
    }
{% endschema %}