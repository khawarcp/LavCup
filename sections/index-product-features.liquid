<link rel="stylesheet" href="{{ 'index-product-features.css' | asset_url }}">
{%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
  
    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
  {%- endstyle -%}
<section class="section-{{ section.id }}-padding product-features">
    <div class="page-width">
        <div class="section-header">
            <h2> {{ section.settings.heading }} </h2>
        </div>
        <div class="product-features-inner">
            <div class="product-main-image">
                {% if section.settings.main_image != blank %}                    
                    <img src="{{ section.settings.main_image | image_url }}" alt="{{ section.settings.main_image.alt }}" loading="lazy" height="579" width="322">
                {% else %}
                    {{ 'image' | placeholder_svg_tag }}
                {% endif %}
            </div>
            <div class="feature-text-content top-content">
                <div class="feature-text top-left-text">
                    {{ section.settings.top_left_text }}
                </div>
                <div class="feature-text top-right-text">
                    {{ section.settings.top_right_text }}
                </div>
            </div>
            <div class="feature-text-content middle-content">
                <div class="feature-text middle-left-text">
                    {{ section.settings.middle_left_text }}
                </div>
                <div class="feature-text middle-right-text">
                    {{ section.settings.middle_right_text }}
                </div>
            </div>
            <div class="feature-text-content bottom-content">
                <div class="feature-text bottom-left-text">
                    {{ section.settings.bottom_left_text }}
                </div>
                <div class="feature-text bottom-middle-text">
                    {{ section.settings.bottom_middle_text }}
                </div>
                <div class="feature-text bottom-right-text">
                    {{ section.settings.bottom_right_text }}
                </div>
            </div>
        </div>
    </div>
</section>

{% schema %}
    {
        "name" : "Product Features",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "Heading",
                "default": "The Antibacterial Shelf <span>Lavcup</span>"
            },
            {
                "type": "image_picker",
                "id": "main_image",
                "label": "Main Image"
            },
            {
                "type": "header",
                "content": "Top Text"
            },
            {
                "type": "richtext",
                "id": "top_left_text",
                "label": "Left Text",
                "default": "<p>Utility patent on shelf incorporating built-in, changeable advertising</p>"
            },
            {
                "type": "richtext",
                "id": "top_right_text",
                "label": "Right Text",
                "default": "<p>Properties built into units protect against 99.9% of bacteria and viruses</p>"
            },
            {
                "type": "header",
                "content": "Middle Text"
            },
            {
                "type": "richtext",
                "id": "middle_left_text",
                "label": "Left Text",
                "default": "<p>1-3 minutes per unit, drill or 3M adhesive application</p>"
            },
            {
                "type": "richtext",
                "id": "middle_right_text",
                "label": "Right Text",
                "default": "<p>made of high-grade polycarbonate</p>"
            },
            {
                "type": "header",
                "content": "Bottom Text"
            },
            {
                "type": "richtext",
                "id": "bottom_left_text",
                "label": "Left Text",
                "default": "<p>Changeable, tamper-resistant ad window for messaging</p>"
            },
            {
                "type": "richtext",
                "id": "bottom_middle_text",
                "label": "Middle Text",
                "default": "<p>Quick KeyTM allows for 10-second ad swap</p>"
            },
            {
                "type": "richtext",
                "id": "bottom_right_text",
                "label": "Right Text",
                "default": "<p>Silicone pad prevents slippage and makes for easy cleaning</p>"
            },
            {
                "type": "header",
                "content": "t:sections.all.padding.section_padding_heading"
            },
            {
                "type": "range",
                "id": "padding_top",
                "min": 0,
                "max": 100,
                "step": 4,
                "unit": "px",
                "label": "t:sections.all.padding.padding_top",
                "default": 36
            }, 
            {
                "type": "range",
                "id": "padding_bottom",
                "min": 0,
                "max": 100,
                "step": 4,
                "unit": "px",
                "label": "t:sections.all.padding.padding_bottom",
                "default": 36
            }
        ],
        "presets": [
            {
                "name" : "Product Features"
            }
        ]
    }
{% endschema %}