
<link rel="stylesheet" href="{{ 'index-testimonials.css' | asset_url }}">
<script src="{{ 'index-testimonials.js' | asset_url }}" defer></script>
{%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
  
    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
  {%- endstyle -%}
<section class="section-{{ section.id }}-padding testimonials-wrapper">
    <div class="page-width">
        {% if section.settings.heading != blank %}
        <div class="section-header">
            <h2> {{ section.settings.heading }} </h2>
        </div>
        {% endif %}
        <div class="testimonials-items testimonials-slider">
            {% for block in section.blocks %}
                {% case block.type %}
                    {% when 'testimonials' %}
                        {% if block.settings.post_comment != blank %}
                            <div class="testimonials-item">
                                <img src="{{ 'quotation.svg' | asset_url }}" alt="Quote Image" height="48" width="48" loading="lazy">
                                <div class="rte">
                                   {{- block.settings.post_comment -}}
                                </div>
                                <h5> {{ block.settings.name | prepend: ' ' | prepend: '-'  }} </h5>
                                <p> {{ block.settings.designation }} </p>
                            </div>    
                        {% endif %}                        
                {% endcase %}
            {% endfor %}
        </div>
    </div>
</section>



{% schema %}
    {
        "name": "Testimonials",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "Heading",
                "default": "Listen From Our Beloved <span>Clients</span>"
            },
            {
                "type": "header",
                "content": "t:sections.all.padding.section_padding_heading"
            }, 
            {
                "type": "range",
                "id": "padding_top",
                "min": 0,
                "max": 100,
                "step": 4,
                "unit": "px",
                "label": "t:sections.all.padding.padding_top",
                "default": 36
            }, 
            {
                "type": "range",
                "id": "padding_bottom",
                "min": 0,
                "max": 100,
                "step": 4,
                "unit": "px",
                "label": "t:sections.all.padding.padding_bottom",
                "default": 36
            }
        ],
        "blocks": [
            {
                "type": "testimonials",
                "name": "Testimonials",
                "settings": [
                    {
                        "type": "richtext",
                        "id": "post_comment",
                        "label": "Comment",
                        "default": "<p>We looked at cup holder alternatives in the past, but never came across a product as sturdy and effective as LavCup.</p>"
                    },
                    {
                        "type": "text",
                        "id": "name",
                        "label": "Name",
                        "default": "Steve R"
                    },
                    {
                        "type": "text",
                        "id": "designation",
                        "label": "Designation",
                        "default": "TD Garden"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Testimonials"
            }
        ]
    }
{% endschema %}