
 <section class="section-{{ section.id }}-padding custom-product-wrapper">
    <div class="page-width">
        <div class="grid grid--2-col">
            <div class="grid__item left-column">
                <div class="left-column-inner">
                    <div class="left-col-image">
                        {% if section.settings.left_image != blank %}
                            <img src="{{ section.settings.left_image | image_url }}" alt="{{ section.settings.left_image.alt }}" loading="lazy" height="" width="">
                        {% else %}
                            {{ 'image' | placeholder_svg_tag }}
                        {% endif %}
                        {% if section.settings.link_text != blank or section.settings.link_url != blank %}                            
                        <a href="{{ section.settings.link_url }}" class="button"> {{ section.settings.link_text }} </a>
                        {% endif %}
                    </div>
                    {% if section.settings.left_heading != blank %}                        
                    <div class="left-col-content">
                       <h2> {{ section.settings.left_heading }} </h2>
                    </div>
                    {% endif %}
                </div>                
            </div>
            <div class="grid__item right-column">  
                <div class="right-column-inner">
                    <div class="right-col-image">
                        {% if section.settings.right_image != blank %}
                            <img src="{{ section.settings.right_image | image_url }}" alt="{{ section.settings.right_image.alt }}" loading="lazy" height="" width="">
                        {% else %}
                            {{ 'image' | placeholder_svg_tag }}
                        {% endif %}
                    </div>
                    <div class="right-col-product">
                        {% assign product = all_products[section.settings.custom_product] %}
                        {% assign product_description = product.description | split: '<!--split-->' %}
                        <h2> {{ product.title }} </h2>
                        <div class="rte">
                            {{ product_description[1] }}
                        </div>
                    </div>
                    <div class="right-col-description">
                        <div class="rte">
                            {{ product_description[0] }}
                        </div>
                        {% if section.settings.right_link_text != blank or section.settings.right_link_url != blank %}                            
                        <a href="{{ section.settings.right_link_url }}" class="button"> {{ section.settings.right_link_text }} </a>
                        {% endif %}
                    </div>
                </div>              
            </div>
        </div>
    </div>
 </section>

{% schema %}
    {
        "name": "Product",
        "class" : "section-content",
        "settings": [
            {
                "type": "header",
                "content": "Left Column"
            },
            {
                "type": "textarea",
                "id": "left_heading",
                "label": "Heading",
                "default": "Extending The Stadium <span>Experience</span>, To The Home."
            },
            {
                "type": "image_picker",
                "id": "left_image",
                "label": "Image"
            },
            {
                "type": "text",
                "id": "link_text",
                "label": "Link Text",
                "default": "More Image"
            },
            {
                "type": "url",
                "id": "link_url",
                "label": "URL"
            },
            {
                "type": "header",
                "content": "Right Column"
            },
            {
                "type": "product",
                "id": "custom_product",
                "label": "Prdouct"
            },
            {
                "type": "image_picker",
                "id": "right_image",
                "label": "Image"
            },
            {
                "type": "text",
                "id": "right_link_text",
                "label": "Link Text",
                "default": "More Image"
            },
            {
                "type": "url",
                "id": "right_link_url",
                "label": "URL"
            }, {
                "type": "header",
                "content": "t:sections.all.padding.section_padding_heading"
            }, {
                "type": "range",
                "id": "padding_top",
                "min": 0,
                "max": 100,
                "step": 4,
                "unit": "px",
                "label": "t:sections.all.padding.padding_top",
                "default": 36
            }, {
                "type": "range",
                "id": "padding_bottom",
                "min": 0,
                "max": 100,
                "step": 4,
                "unit": "px",
                "label": "t:sections.all.padding.padding_bottom",
                "default": 36
            }
        ],
        "presets": [
            {
            "name" : "Product"
        }
    ]
    }
{% endschema %}