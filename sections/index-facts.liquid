<link rel="stylesheet" href="{{ 'index-facts.css' | asset_url }}">

<section class="facts-wrapper">
    <div class="page-width">
        <div class="grid">
            {% for block in section.blocks %}
                {% case block.type %}
                    {% when 'fact' %}                      
                        <div class="grid__item">
                            <div class="fact-item">
                                <h2> {{ block.settings.heading }} </h2>
                                <p> {{ block.settings.text }} </p>
                            </div>
                        </div>
                {% endcase %}
            {% endfor %}
        </div>
    </div>
</section>

{% schema %}
    {
        "name": "Facts",
        "settings": [],
        "blocks": [
        {
            "type": "fact",
            "name": "Fact",
            "limit": 4,
            "settings": [
                {
                    "type": "text",
                    "id": "heading",
                    "label": "Heading",
                    "default": "95%+"
                },
                {
                    "type": "text",
                    "id": "text",
                    "label": "Text",
                    "default": "fans use the bathroom during an event"
                }
            ]
        }
    ]
    }
{% endschema %}