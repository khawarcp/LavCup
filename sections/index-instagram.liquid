<link rel="stylesheet" href="{{ 'index-instagram.css' | asset_url }}">
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<section class="section-{{ section.id }}-padding instgram-wrapper">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <div class="section-header center  {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        <h2>{{ section.settings.heading }}</h2>
      </div>
    {% endif %}
    <div class="grid {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">    
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'image' %}
             <div class="grid__item"
               {% if settings.animations_reveal_on_scroll %}
            data-cascade
            style="--animation-order: {{ forloop.index }};"
          {% endif %}>
              <div class="instagram-image-item">
                {% if block.settings.image != blank %}
                  <img
                    src="{{ block.settings.image | image_url }}"
                    alt="{{ block.settings.image.alt }}"
                    width=""
                    height=""
                    loading="lazy"
                  >
                {% else %}
                  {{ 'image' | placeholder_svg_tag }}
                {% endif %}
      </div>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
  </div>
</section>

{% schema %}
{
  "name": "Custom Instagram",
  "settings": [
      {
              "type": "text",
              "id": "heading",
              "label": "Heading",
              "default": "Where To Use <span>Lavcup</span>"
          },
          {
              "type": "header",
              "content": "t:sections.all.padding.section_padding_heading"
          },
          {
              "type": "range",
              "id": "padding_top",
              "min": 0,
              "max": 100,
              "step": 4,
              "unit": "px",
              "label": "t:sections.all.padding.padding_top",
              "default": 36
          },
          {
              "type": "range",
              "id": "padding_bottom",
              "min": 0,
              "max": 100,
              "step": 4,
              "unit": "px",
              "label": "t:sections.all.padding.padding_bottom",
              "default": 36
          }
  ],
  "blocks": [
    {
      "name" : "image",
      "type" : "image",
      "settings" : [
        {
          "type" : "image_picker",
          "id" : "image",
          "label" : "Image"
        }
      ]
    }
  ],
        "presets": [
            {
                "name": "Custom Instagram"
            }
        ]
}
{% endschema %}

