<link rel="stylesheet" href="{{ 'installation-steps.css' | asset_url }}">

<section class="section-{{ section.id }}-padding steps-wrapper">
  <div class="page-width"></div>
</section>

{% schema %}
  {
    "name": "Steps",
    "settings": [
      {
        "type": "text",
        "id": "step_number",
        "label": "Step Number",
        "default": "Step <span>1</span>"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Secure Wall Mount to <span>Wall</span>"
      },
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ],
    "blocks": [
      {
        "type": "step",
        "name": "Step",
        "settings": [
          {
            "type": "text",
            "id": "step",
            "label": "Step"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Inatallation Step"
      }
    ]
  }
{% endschema %}