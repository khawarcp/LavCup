<section class="page-banner">
  <div class="page-width">
    <div class="page-bg" style="background-image:url('{{ section.settings.bg_image | image_url }}')">
      {% if section.settings.heading != blank %}
        <h1>{{ section.settings.heading }}</h1>
      {% else %}
        <h1>{{ page.title }}</h1>
      {% endif %}
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Page Banner",
  "settings": [
    {
      "type" : "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type" : "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    }

  ]
}
{% endschema %}

