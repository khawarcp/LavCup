<section class="page-banner" style="background-image:url('{{ section.settings.bg_image | image_url }}')">
  <div class="page-width">
    {% if section.settings.heading != blank %}
    <h1> {{ section.settings.heading }} </h1>
    {% else %}
    <h1> {{ page.title }} </h1>
    {% endif %}
  </div>
</section>
{% schema %}
  {
    "name": "Page Banner",
    "settings": [
      {
        "type" : "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type" : "image_picker",
        "id": "bg_image",
        "label": "Background Image"
      }
      
    ]
  }
{% endschema %}

