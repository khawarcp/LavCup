<section class="policy shipping-policy-content">
  <div class="page-width">
    <div class="rte">
      {{ shop.policy.body | json }}
    </div>
  </div>
</section>

<ul abc>
{%- for policy in shop.policies -%}
              {%- if policy != blank -%}
                <li>
                  <small class="copyright__content"
                    ><a href="{{ policy.url }}">{{ policy.title }}</a></small
                  >
                </li>
              {%- endif -%}
            {%- endfor -%}
</ul>

